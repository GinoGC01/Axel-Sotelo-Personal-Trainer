<section id="inicio" class="relative md:min-h-[100vh] flex flex-col items-center pt-20 md:justify-end bg-background-dark overflow-hidden border-b border-white/10 pb-[20px]">
    
    <!-- FONDO -->
    <div class="absolute inset-0 z-0 opacity-5 md:opacity-10 bg-grid-pattern bg-[length:30px_30px] md:bg-[length:50px_50px]"></div>
    <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[140%] md:w-[120%] h-[50%] bg-[radial-gradient(ellipse_at_bottom,_var(--tw-gradient-stops))] from-primary/30 via-transparent to-transparent z-0 blur-3xl"></div>

    <!-- HERO -->
    <div class="relative z-20 h-full w-full md:max-w-8xl mx-auto flex items-end justify-center pointer-events-none">
        
        <!-- TEXTO INTENSIDAD -->
        <div class="absolute top-[100px] md:top-[12%] left-1/2 -translate-x-1/2 w-full text-center z-10 select-none pointer-events-none px-4 hero-fade-1">
            <h2 class="font-display font-bold text-[5rem] md:text-[20rem] text-transparent text-outline opacity-40 md:opacity-90 uppercase tracking-tighter leading-[0.7] blur-[0.5px]">
                Intensidad
            </h2>
        </div>

        <!-- TEXTO DISCIPLINA -->
        <div class="absolute top-[300px] md:top-[42%] left-1/2 -translate-x-1/2 w-full text-center z-30 select-none pointer-events-none hero-fade-2">
            <h2 class="font-display font-bold text-[5rem] md:text-[14rem] text-white uppercase tracking-tighter leading-[0.8] mix-blend-overlay opacity-30 md:opacity-50">
                Disciplina
            </h2>
        </div>

        <!-- IMAGEN -->
        <img 
            src="../images/image.png" 
            alt="Axel Sotelo" 
            class="relative z-20 h-[55vh] sm:h-[65vh] md:h-[85vh] w-auto object-contain object-bottom drop-shadow-[0_0_30px_rgba(255,107,0,0.2)] contrast-125 hero-fade-3" 
        />
    </div>

    <!-- CARD CTA -->
    <div class="z-40 w-full flex justify-center px-4 pointer-events-auto -mt-20 hero-fade-4">
        <div class="group bg-black/95 backdrop-blur-2xl border border-white/10 p-1 max-w-xl w-full transform hover:-translate-y-1 transition-all duration-500 shadow-2xl">
             <div class="border border-white/10 p-4 md:p-8 flex flex-col items-center text-center relative overflow-hidden">

                <div class="absolute top-0 left-0 w-2 h-2 border-l border-t border-primary"></div>
                <div class="absolute bottom-0 right-0 w-2 h-2 border-r border-b border-primary"></div>

                <h3 class="text-2xl md:text-5xl font-display font-bold text-white uppercase mb-3 tracking-tight">
                    Transforma Tu <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-orange-500">Cuerpo</span>
                </h3>
                
                <p class="hidden xs:block text-gray-500 font-mono text-[10px] uppercase tracking-[0.3em] mb-4">High Performance Coaching</p>
                
                <a href="#programas" class="group/btn relative bg-white text-black w-full block py-3 md:py-4 text-lg md:text-xl font-display font-bold uppercase tracking-widest hover:bg-primary transition-colors duration-300 overflow-hidden">
                    <span class="relative z-10">Comenzar Ahora</span>
                    <div class="absolute inset-0 bg-primary translate-y-full group-hover/btn:translate-y-0 transition-transform duration-300"></div>
                </a>
            </div>
        </div>
    </div>

    <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-background-dark to-transparent z-30 pointer-events-none"></div>
</section>

<style>
/* ANIMACIONES DE ENTRADA */

.hero-fade-1,
.hero-fade-2,
.hero-fade-3,
.hero-fade-4 {
  opacity: 0;
  transform: translateY(40px) scale(0.98);
  animation: heroReveal 1s cubic-bezier(.16,1,.3,1) forwards;
}

.hero-fade-1 { animation-delay: 0.2s; }
.hero-fade-2 { animation-delay: 0.5s; }
.hero-fade-3 { animation-delay: 0.8s; }
.hero-fade-4 { animation-delay: 1.1s; }

@keyframes heroReveal {
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}
</style>
