---
import '../styles/global.css';
import Footer from '../components/Footer.astro'
import Navbar from '../components/Navbar.astro'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Axel Sotelo | Entrenamiento Personal de Alto Nivel" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Oswald:wght@300;400;500;600;700&family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<Navbar/>
		<slot />
		<Footer/>
	</body>
</html>